<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/typeColorLinear"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/bg_blue">

    </ImageView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reminder_date"
                android:layout_width="match_parent"
                android:minWidth="500dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:text="TextView TextView TextView"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/reminder_handling_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:src="@drawable/ic_access_alarm_black_24dp">
            </ImageView>

            <TextView
                android:id="@+id/reminder_handling_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="not handled yet"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/reasons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reasons :"
            android:textColor="@color/bg_blue"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/reasons_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="not handled yet"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>

</LinearLayout>