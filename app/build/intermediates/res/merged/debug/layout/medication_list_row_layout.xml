<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="5dip">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="0.6"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView TextView TextView"
        android:textAppearance="?android:attr/textAppearanceMedium">
    </TextView>

    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_below="@+id/medicine_name"
        android:layout_marginLeft="2dip"
        android:text="TextView">
    </TextView>
</LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/medicine_image1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="0dp"
            android:scaleType="center"
            android:src="@drawable/cameraa">
        </ImageView>

        <ImageView
            android:id="@+id/medicine_image2"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="55dp"
            android:scaleType="center"
            android:src="@drawable/cameraa">
        </ImageView>

        <ImageView
            android:id="@+id/next"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:scaleType="center"
            android:src="@drawable/ic_chevron_right_black_24dp"></ImageView>
    </RelativeLayout>



</LinearLayout>