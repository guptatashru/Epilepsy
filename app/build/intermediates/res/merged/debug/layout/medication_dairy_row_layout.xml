<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/medicine_image1"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="200dp"
        android:scaleType="center"
        android:src="@drawable/cameraa">
    </ImageView>

    <ImageView
        android:id="@+id/medicine_image2"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="270dp"
        android:scaleType="center"
        android:src="@drawable/cameraa">
    </ImageView>

    <ImageView
        android:id="@+id/next"
        android:layout_width="20dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:scaleType="center"
        android:src="@drawable/right_arrow"></ImageView>


    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:text="TextView TextView TextView"
        android:textAppearance="?android:attr/textAppearanceLarge">
    </TextView>

    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_below="@+id/medicine_name"
        android:layout_marginLeft="2dip"
        android:text="TextView">
    </TextView>

</RelativeLayout>